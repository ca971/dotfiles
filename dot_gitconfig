[init]
  defaultBranch = main

[gpg]
  format = ssh

[commit]
  gpgsign = true
  verbose = true

[alias]
  # aliases = config --get-regexp alias
  aliases = !git config --list | rg 'alias\\.' | sed -E 's/alias\\.([^=]*)=(.*)/\\1\\ \t => \\2/' | sort alias-grep = !git config --list | rg '^alias\\.' | cut -c 7- | grep -Ei --color \"$1\" "#"

  # Navigation
  st = status
  co = checkout
  br = branch
  lg = log --graph --oneline --all --decorate
  lga = log --oneline --decorate --all --graph --pretty=format:"%C(auto)%h%d %s [%an]"
  log = log --oneline --decorate --graph --all
  last = log -1 HEAD --format=format:"%Cred%H"
  graph = log --all --graph --oneline --decorate

  # Workflow
  ci = commit
  amend = commit --amend --no-edit # Amend the last commit without changing the message
  cm = commit -m
  ca = commit --amend # Amend the last commit with message editing
  cob = checkout -b # Create and switch to a new branch
  save = stash push -m # Save changes to a named stash
  pop = stash pop # Restore the latest stash

  # Diff and History
  df = diff
  dc = diff --cached # Show staged changes
  ds = diff --stat # Display a summary of changes

  # Reset
  undo = reset --soft HEAD~1 # Undo the last commit but keep changes staged
  hard = reset --hard HEAD # Fully reset the repository to the last commit

  # Collaboration
  rb = rebase
  rbc = rebase --continue
  pullr = pull --rebase # Pull changes with rebase instead of merge
  rbi = rebase -i

  # Cleanup
  clean = "!git clean -fd && git reset --hard" # Reset the repository and remove untracked files

  # External tools
  pr = "!gh pr create"                  # Create a pull request using GitHub CLI
  prl = "!gh pr list"                   # List pull requests using GitHub CLI
  prc = "!gh pr checkout"               # Checkout a pull request using GitHub CLI
